# ===========================================
# Application
# ===========================================
DATABASE_URL=postgresql://user:password@localhost:5432/mydb
APP_PORT=3000
APP_NAME=elysia-kit
APP_URL=http://localhost:3000
NODE_ENV=development
LOG_LEVEL=info

# ===========================================
# Trigger.dev (optional)
# ===========================================
# TRIGGER_SECRET_KEY=tr_dev_xxx
# TRIGGER_PROJECT_ID=your-project-id

# ===========================================
# Email (Resend)
# ===========================================
RESEND_API_KEY=re_xxx
RESEND_MAIL=noreply@example.com

# ===========================================
# Observability Feature Flags
# Use "TRUE" or "FALSE" to enable/disable
# ===========================================
TRACING_ENABLED=TRUE
METRICS_ENABLED=TRUE
LOGGING_ENABLED=TRUE

# ===========================================
# Telemetry Ports (defaults shown)
# ===========================================
# TEMPO_UI_PORT=3200
# TEMPO_OTLP_GRPC_PORT=4317
# TEMPO_OTLP_HTTP_PORT=4318
# PROMETHEUS_PORT=9090
# LOKI_PORT=3100
# GRAFANA_PORT=3001
# METRICS_EXPORTER_PORT=9464

# ===========================================
# Telemetry Service URLs (optional overrides)
# Use these when services are on different hosts
# ===========================================
# TEMPO_URL=http://tempo:3200
# LOKI_URL=http://loki:3100

# ===========================================
# Arcjet Rate Limiting (optional)
# ===========================================
# ARCJET_KEY=ajkey_xxx
# ARCJET_ENV=development
