{
  "name": "elysia-kit",
  "version": "0.0.1",
  "scripts": {
    "dev": "bun --bun run --watch src/index.ts",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:dev": "bun run scripts/dev-db.ts up",
    "db:dev:down": "bun run scripts/dev-db.ts down",
    "db:dev:destroy": "bun run scripts/dev-db.ts destroy",
    "db:dev:logs": "bun run scripts/dev-db.ts logs",
    "db:dev:shell": "bun run scripts/dev-db.ts shell",
    "generate:prometheus": "bun run scripts/generate-prometheus-config.ts",
    "telemetry:up": "bun run generate:prometheus && docker compose up -d",
    "telemetry:down": "docker compose down"
  },
  "dependencies": {
    "@elysiajs/openapi": "^1.4.13",
    "@elysiajs/opentelemetry": "^1.4.10",
    "@opentelemetry/exporter-metrics-otlp-proto": "^0.208.0",
    "@opentelemetry/exporter-prometheus": "^0.208.0",
    "@opentelemetry/exporter-trace-otlp-proto": "^0.208.0",
    "@opentelemetry/sdk-trace-node": "^2.2.0",
    "@paralleldrive/cuid2": "^3.0.4",
    "drizzle-orm": "^0.44.2",
    "drizzle-zod": "^0.8.3",
    "elysia": "latest",
    "pino": "^10.1.0",
    "pino-loki": "^3.0.0",
    "pino-pretty": "^13.1.3",
    "postgres": "^3.4.7",
    "zod": "^4.2.1"
  },
