{
  "name": "elysia-kit",
  "description": "A modular Elysia boilerplate with Drizzle ORM, full observability (traces/metrics/logs), email templates, background jobs, and flexible deployment options (Vercel, PM2, or Kubernetes).",
  "version": "1.0.3",
  "scripts": {
    "dev": "bun --bun run --watch src/index.ts",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:dev": "bun run scripts/dev-db.ts up",
    "db:dev:down": "bun run scripts/dev-db.ts down",
    "db:dev:destroy": "bun run scripts/dev-db.ts destroy",
    "db:dev:logs": "bun run scripts/dev-db.ts logs",
    "db:dev:shell": "bun run scripts/dev-db.ts shell",
    "generate:prometheus": "bun run scripts/generate-prometheus-config.ts",
    "telemetry:up": "bun run generate:prometheus && docker compose up -d",
    "telemetry:down": "docker compose down",
    "trigger:dev": "bunx --bun trigger.dev@latest dev",
    "trigger:deploy": "bunx --bun trigger.dev@latest deploy",
    "email": "email dev --dir src/emails",
    "infra:install": "cd infra && bun install",
    "infra:preview": "cd infra && pulumi preview",
    "infra:dev": "cd infra && pulumi up --stack dev",
    "infra:prod": "cd infra && pulumi up --stack production",
    "infra:destroy:dev": "cd infra && pulumi destroy --stack dev",
    "infra:destroy:prod": "cd infra && pulumi destroy --stack production",
    "docker:build": "docker build -t elysia-kit:latest .",
    "docker:push": "docker push elysia-kit:latest",
    "deploy:k8s": "docker build -t alsinajun/elysia-kit:latest . && docker push alsinajun/elysia-kit:latest && kubectl rollout restart deployment/elysia-kit -n elysia-kit-dev",
    "pm2:start": "pm2 start ecosystem.config.cjs",
    "pm2:start:prod": "pm2 start ecosystem.config.cjs --env production",
    "pm2:reload": "pm2 reload elysia-kit",
    "pm2:stop": "pm2 stop elysia-kit",
    "pm2:logs": "pm2 logs elysia-kit",
    "pm2:monit": "pm2 monit",
    "deploy:pm2": "pm2 deploy ecosystem.config.cjs production",
    "deploy:pm2:setup": "pm2 deploy ecosystem.config.cjs production setup",
    "infra:check": "cd infra && bun run preflight-check.ts",
    "vercel:dev": "vc dev",
    "vercel:deploy": "vc deploy",
    "vercel:deploy:prod": "vc deploy --prod"
  },
  "dependencies": {
    "@arcjet/bun": "^1.0.0-beta.15",
    "@arcjet/inspect": "^1.0.0-beta.15",
    "@elysiajs/html": "^1.4.0",
    "@elysiajs/openapi": "^1.4.13",
    "@elysiajs/opentelemetry": "^1.4.10",
    "@opentelemetry/exporter-metrics-otlp-proto": "^0.208.0",
    "@opentelemetry/exporter-prometheus": "^0.208.0",
    "@opentelemetry/exporter-trace-otlp-proto": "^0.208.0",
    "@opentelemetry/sdk-trace-node": "^2.2.0",
    "@paralleldrive/cuid2": "^3.0.6",
    "@react-email/components": "^1.0.3",
    "@trigger.dev/sdk": "4.3.1",
    "drizzle-orm": "^0.44.7",
    "drizzle-zod": "^0.8.3",
    "elysia": "latest",
    "pino": "^10.1.0",
    "pino-loki": "^3.0.0",
    "pino-pretty": "^13.1.3",
    "postgres": "^3.4.8",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "resend": "^6.6.0",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@react-email/preview-server": "5.1.1",
    "@trigger.dev/build": "4.3.1",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "bun-types": "latest",
    "drizzle-kit": "^0.31.8",
    "react-email": "^5.1.1"
  },
  "module": "src/index.js"
}