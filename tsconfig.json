{
  "compilerOptions": {
    "target": "ES2021",

    /* Modules */
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "types": ["bun-types"],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@src/*": ["src/*"],
      "@app/*": ["src/app/*"],
      "@lib/*": ["src/lib/*"],
      "@routes/*": ["src/app/routes/*"],
      "@db/*": ["src/db/*"]
    },

    /* Type Checking */
    "strict": true,
    "skipLibCheck": true
  }
}
