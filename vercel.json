{
    "$schema": "https://openapi.vercel.sh/vercel.json",
    "bunVersion": "1.x",
    "installCommand": "bun install",
    "buildCommand": "bun build ./api/index.ts --outfile ./api/index.js --target bun --format esm --minify",
    "devCommand": "bun run dev",
    "outputDirectory": ".",
    "runtimes": {
    "api/index.ts": {
      "runtime": "bun"
    },
    "rewrites": [
        {
            "source": "/(.*)",
            "destination": "/api"
        }
    ]
}