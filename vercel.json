{
    "$schema": "https://openapi.vercel.sh/vercel.json",
    "bunVersion": "1.x",
    "installCommand": "bun install",
    "buildCommand": "bun build ./api/entry.ts --outfile ./api/index.js --target bun --format esm",
    "functions": {
        "api/index.js": {
            "runtime": "bun@1.x"
        }
    },
    "rewrites": [
        {
            "source": "/(.*)",
            "destination": "/api"
        }
    ]
}